{% extends 'base.html.twig' %}

{% block title %}{{'Winback Interface | Softwares'|trans}}{% endblock %}

{% block content %}
    <div class="container d-flex flex-column justify-content-between align-items-center">
        <h1 class="text-center mt-4 mb-4">{{ 'Softwares'|trans }}</h1>
        <section id="softwareSearch"></section>
        <!-- ===== ALERT MESSAGES ===== -->
        {% for message in app.flashes('errorSoftware') %}
            <div class="p-3 my-2 rounded-2 alert alert-danger">{{ message|trans }}</div>
        {% endfor %}
        {% for message in app.flashes('message') %}
            <div class="p-3 my-2 rounded-2 alert alert-warning">{{ message|trans }}</div>
        {% endfor %}
        {% for message in app.flashes('infoSoftware') %}
            <div class="p-3 my-2 rounded-2 alert alert-success">{{ message|trans }}</div>
        {% endfor %}
        <div class="row w-100">
            <div class="col-md-3">
                <!-- ===== NEW SOFTWARE ===== -->
                {% if is_granted("ROLE_ADMIN") %}
                <a class="btn shadow-1 bg-orange btn-outline-orange floatingBtn d-flex align-items-center justify-content-center" 
                    href="{{path('software_add')}}"
                    style="border: none; border-radius: 50%; height: 4em; width: 4em; box-shadow: 2px 2px 3px #999; padding: 1em;" 
                    type="button">
                    <i class="fa-solid fa-plus"></i>
                </a>
                {% endif %}
                <!-- ===== UPLOAD MODALS ===== -->
                {% include 'software/upload_modals.html.twig' %}
                <!-- ===== SEARCH SOFTWARE IN DB ===== -->
                
                {% include "software/_filter.html.twig" %}
            </div>
            <div class="col-md-9">
                <!-- ===== SOFTWARE TABLE PER FAMILY ===== -->
                <div class="d-flex flex-column space-between">
                
                {% for family in families %}
                    <div class="accordion mt-2 mb-4" id="accordionSoftware">
                        
                        <div class="accordion-item">
                            <h2 class="text-center accordion-header mt-2 mb-2" id="accordionHeading_{{ family.name }}">
                                <!--
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="accordionCollapse_{{ family.name }}" aria-expanded="true" aria-controls="accordionCollapse_{{ family.name }}" style="background-color: #f18741c4; color: white;">
                                    {{ family.name }}
                                </button>
                                -->
                                {{ family.name }}
                            </h2>
                            <div class="accordion-collapse collapse show responsive-table overflow-auto" id="accordionCollapse_{{ family.name }}" aria-labelledby="accordionHeading_{{ family.name }}" data-bs-parent="#accordionSoftware">
                                
                                <table class="table table-striped table-hover" id="softTable_{{ family.name }}">
                                        <thead class="accordion-item">
                                            <tr class="accordion-header">
                                                <th class="text-center">{{ 'Filename'|trans }}</th>
                                                <th class="text-center">
                                                    <div class="d-flex flex-nowrap input-group justify-content-center">
                                                        <span>{{"Version"|trans}}</span>
                                                        {#<i class="fa-solid fa-arrow-up-a-z btn p-1 mx-1" onclick=sortTable(0)></i>#}
                                                        <i id="softTableClick_{{ family.name }}" class="fa-solid fa-arrow-up-a-z py-1 softTableClick" style="margin-left: 2px;"></i>
                                                    </div>
                                                </th>
                                                <th class="text-center">
                                                {{ 'Creation date'|trans }}
                                                </th>
                                                {% if is_granted("ROLE_ADMIN") %}
                                                <th class="text-center"><i class="fa-solid fa-trash"></i></th>
                                                <th class="text-center">{{ 'Update Comment'|trans }}</th>
                                                {% endif %}
                                            </tr>
                                        </thead>
                                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                                        <thead>
                                        <tr>
                                            <th>
                                            Actual version : 
                                            
                                            {{ family.actualVersion }}
                                            {#
                                            <div class="input-group d-flex flex-nowrap text-break overflow-hidden actualVersion-update-form">
                                                <input class="actualVersion_update_input border border-0" style="background-color:#f1874144;" type="text" name="nm" value="{{family.actualVersion.version}}">
                                                <button class="actualVersion_update_button btn btn-dark border-0" type="button" name="name" value="" data-id="{{family.id}}"><i class="fa-solid fa-check"></i></button>
                                            </div>
                                            #}
                                            {#
                                            <select name="" id="">
                                            <option value="" selected disabled hidden>Actual Version</option>
                                            {% for soft in softwares %}
                                                <option value={{soft}} class="select-version" data-devicefamily="{{soft.deviceFamily}}">
                                                {{soft}}
                                                </option>
                                            {% endfor %}
                                            </select>
                                            #}
                                            </th>
                                        </tr>
                                        </thead>
                                        {% endif %}
                                        <tbody class="accordion-body">
                                        
                                        {% for soft in softwares %}
                                            
                                            {% if family.name == soft.deviceFamily %}
                                        
                                            
                                            <tr style="font-size: 12px;">
                                                
                                                <td class="text-center">
                                                    {% if is_granted("ROLE_ADMIN") %}
                                                        <a download href="{{ asset(ressource_path  ~ 'package/' ~ family.name ~ '/' ~ soft.name) }}">{{soft.name}}</a>
                                                    {% else %}
                                                        {{soft.name}}
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">{{soft.version}}</td>
                                                <td class="text-center">{{soft.createdAt|format_datetime('medium', 'short')}}</td>
                                                {% if is_granted("ROLE_ADMIN") %}
                                                <td class="text-center">
                                                    <a href="#" class="btn rounded-1 bg-orange btn-outline-orange press modal-trigger" 
                                                    data-bs-target="#modal_delete_{{soft.id}}"
                                                    data-id="delete_{{soft.id}}"
                                                    data-title="{{soft.name}}"
                                                    data-bs-toggle="modal"><i class="fa-solid fa-trash"></i></a>
                                                </td>
                                                <td class="text-center">
                                                    <div class="input-group d-flex flex-nowrap text-break overflow-hidden comment-update-form">
                                                        <input class="comment_update_input border border-0" style="background-color:#f1874144;" type="text" name="nm" value="{{soft.updateComment}}">
                                                        <button class="comment_update_button btn btn-dark border-0" type="button" name="name" value="" data-id="{{soft.id}}"><i class="fa-solid fa-check"></i></button>
                                                    </div>
                                                </td>
                                                {% endif %}
                                            </tr>
                                            
                                            
                                            {% include 'software/delete_modals.html.twig' %}
                                        {% endif %}
                                        
                                        {% endfor %}
                                          
                                        </tbody>
                                </table>
                                

                            </div>
                        </div>
                        
                    </div>
                {% endfor %}
                
                </div>
            </div>
        </div>

        {# ===== DELETE MODALS ===== #}
        {#
        {% include 'software/delete_modals.html.twig' %}
        #}
    </div>
    

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/software.js')}}"></script>
{% endblock %}

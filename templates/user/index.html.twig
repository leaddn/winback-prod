{% extends 'base.html.twig' %}

{% block title %}{{'Winback Interface | Users'|trans}}{% endblock %}

{% block content %}

<div>
<table class="table table-hover responsive-table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Roles</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{user.username}}</td>
            <td>{% for role in user.roles %}
                <span class="{{(role == 'ROLE_ADMIN')? 'bg-primary':(role == 'ROLE_GOE')? 'bg-warning':''}}">{{role}}</span>
            {% endfor %}</td>
            <td>{{user.email}}</td>
        </tr>
    {% endfor %}

    </tbody>
</table>
</div>
{% endblock %}



{% apply inline_css(source('@styles/email.css')) %}
{#
<header class="header-mail"><img src="{{ email.image('@images/wk_mail/wk_logo_header.png') }}" alt="Logo Header"></header>
#}
<h1 class="h1-mail">Error Report</h1>

<p class="margin-bottom">
<br>
<div>

{% for key, value in result %}
    <span><h2>{{key}}</h2><h3>{{value.device_type}}</h3></span>
    <table class="table-mail">
        <thead>
        <tr>
        <th>Date</th>
        <th>Error</th>
        <th>Version</th>
        </tr>
        </thead>
        <tbody>
            {% for item in value.errors %}
                <tr>
                <td class="table-mail-cell">{{item.date}}</td>
                <td class="table-mail-cell">{{item.error_id}}</td>
                <td class="table-mail-cell">{{item.version}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endfor %}
</div>
<br>
Don't hesitate to contact us with your feedback or if you encounter any issues to access your data.<br><br>
<strong>The Winback Team.</strong>
</p>

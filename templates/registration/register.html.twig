{% extends 'base.html.twig' %}

{% block title %}{{ 'Winback Interface | Registration | Welcome !'|trans }}{% endblock %}

{% block content %}
    <div class="container row d-flex justify-content-center align-items-center p-5">
        <!--
        <div class="col-md-9 col-lg-6 col-xl-5 p-5 d-flex justify-content-center">
        <img src="{{ asset('img/winback-logo.webp') }}" class="img-fluid" alt="">
        </div>
        -->
        <div class="col-md-8 col-lg-6 col-xl-4">
        <!--<div class="col-md-6">-->
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'text-center d-flex flex-column align-items-center justify-content-around login registration-form'}}) }}
                <div class="" style="margin-top: 1em; padding-bottom: 2em;">
                    <span class="fa-stack fa-3x" style="position: relative; top: -40px;">
                        <i class="fa-solid fa-circle fa-stack-2x" style="color: #f18841;"></i>
                        <i class="fa-regular fa-user fa-stack-1x fa-inverse" style="text-shadow: 2px 2px 2px rgba(0,0,0,0.5);"></i>
                    </span>
                    <h2 class="mb-sm-3">{{ 'Register'|trans }}</h2>
                        <div class="form-outline">
                            <div class="input-group flex-nowrap">
                                <span class="input-group-text mb-3" id="addon-wrapping">
                                <i class="fa-solid fa-user"></i>
                                </span>
                                {{ form_row(registrationForm.username, {attr: {placeholder: ( 'Username'|trans ), id: 'username', style: 'border-left-style: none; border-top-left-radius: 0; border-bottom-left-radius: 0;', class: 'form-control-register'}})}}
                            </div>
                        </div>
                        <div class="form-outline">
                            <div class="input-group flex-nowrap">
                                <span class="input-group-text mb-3" id="addon-wrapping"><i class="fa-solid fa-envelope"></i></span>
                                {{ form_row(registrationForm.email, {attr: {placeholder: ( 'Email'|trans ), id: 'email', style: 'border-left-style: none; border-top-left-radius: 0; border-bottom-left-radius: 0;', class: 'form-control-register'}}) }}
                            </div>
                        </div>
                        <div class="form-outline">
                            <div class="input-group flex-nowrap">
                                <span class="input-group-text mb-3" id="addon-wrapping"><i class="fa-solid fa-lock"></i></span>
                                {{ form_row(registrationForm.password.first, {attr: {placeholder: ( 'Password'|trans ), style: 'border-left-style: none; border-radius: 0;', class:'inputPassword form-control-register', onkeyup:"checkPasswordStrength();"}}) }}
                                <span class="input-group-text text-secondary mb-3" id="addon-wrapping" style="background-color: #ffffff; border-left-style: none; border-left-right-radius: 0; border-left-right-radius: 0;"><i class="eyeIcon fa-regular fa-eye-slash"></i></span>
                            </div>
                            <div class="progress">
                            <div id="progress-bar" class="progress-bar" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div id="password-strength-status"></div>
                        </div>
                        <div class="form-outline mt-3">
                            <div class="input-group flex-nowrap">
                                <span class="input-group-text mb-3" id="addon-wrapping"><i class="fa-solid fa-lock"></i></span>
                                {{ form_row(registrationForm.password.second, {attr: {placeholder: ( 'Confirm Password'|trans ), style: 'border-left-style: none; border-radius: 0;', class:'inputPassword form-control-register'}}) }}
                                <span class="input-group-text text-secondary mb-3" id="addon-wrapping" style="background-color: #ffffff; border-left-style: none; border-left-right-radius: 0; border-left-right-radius: 0;"><i class="eyeIcon fa-regular fa-eye-slash"></i></span>
                            </div>
                        </div>
                    <div class="d-flex justify-content-center flex-nowrap">{{ form_row(registrationForm.agreeTerms, {attr: {label: ( 'Agree terms'|trans ), style: 'margin-bottom: 0;'}}) }}</div>

                    <button type="submit" class="btn btn-justify txt-white bg-orange btn-orange w-100 h-auto btn-login">{{ 'Register'|trans }} <svg width="7" height="15" viewBox="0 0 7 15" fill="none"><path d="M-0.000264168 0H3.14905L6.81055 7.49834L3.14905 15H-0.000264168L3.66123 7.49834L-0.000264168 0Z" fill="white"></path></svg></button>

                    <div class="divider d-flex align-items-center my-3">
                        {#<p class="text-center fw-bold mx-3 mb-0">{{ 'Or'|trans }}</p>#}
                    </div>
                    <div class="d-flex justify-content-around align-items-center w-100 p-0 flex-wrap">
                        <p class="mb-1 text-nowrap">{{ 'Already registered ?'|trans }}</p>
                        <a class="btn btn-justify btn-secondary txt-white mb-1 w-100 btn-login" href="{{ path('app_login') }}">{{ 'Login'|trans }} <svg width="7" height="15" viewBox="0 0 7 15" fill="none"><path d="M-0.000264168 0H3.14905L6.81055 7.49834L3.14905 15H-0.000264168L3.66123 7.49834L-0.000264168 0Z" fill="white"></path></svg></a>
                    </div>
                </div>

            {{ form_end(registrationForm) }}
        </div>

    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/register.js')}}"></script>
{% endblock %}
